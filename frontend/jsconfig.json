{
    "compilerOptions": {
        "target": "es2022",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@Auth/*": ["src/auth/*"],
            "@Components/*": ["src/components/*"],
            "@Helpers/*": ["src/helpers/*"],
            "@Pages/*": ["src/pages/*"],
            "@Resolvers/*": ["src/resolvers/*"],
            "@Routers/*": ["src/routers/*"],
            "@Services/*": ["src/services/*"],
            "@Utils/*": ["src/utils/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}